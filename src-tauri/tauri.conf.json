{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "ocularus",
  "version": "0.1.0",
  "identifier": "com.ocularus.app",
  "build": {
    "beforeDevCommand": "yarn extractor:dev && yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn extractor:build && yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ocularus",
        "visible": false,
        "fullscreen": true,
        "alwaysOnTop": true,
        "decorations": true,
        "transparent": true,
        "skipTaskbar": true,
        "resizable": false,
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      },
      "capabilities": [
        {
          "identifier": "settings",
          "description": "Capability for the settings window",
          "windows": [
            "settings",
            "main"
          ],
          "permissions": [
            "core:default",
            "core:app:allow-version",
            "shell:allow-open",
            "autostart:allow-enable",
            "autostart:allow-disable",
            "autostart:allow-is-enabled"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}